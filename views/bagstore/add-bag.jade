extends ../layout/base
block content
    section.content-header

    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Bag Store
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/bag/add')
                    .row
                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Nama
                                    input(type='text',value='#{nama}',name='nama',placeholder='Nama', autofocus).form-control
                                .form-group
                                    label
                                        | Merk
                                    input(type='text',name='merk',placeholder='Merk').form-control
                                .form-group
                                    label
                                        | Harga
                                    input(type='text',value='#{harga}',name='harga',placeholder='Harga').form-control
                                .form-group
                                    label
                                        | Stock
                                    input(type='text',name='stock',placeholder='Stock').form-control
                            .box-footer
                                button(type='submit').btn.btn-primary
                                    | Submit

                                a(href='/bag').btn.btn-primary.pull-right
                                    | Back